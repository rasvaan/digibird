<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>DigiBird blog</title>
    <link rel="shortcut icon" href="img/favicon.ico">
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <link href="bs/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/digibird.css" rel="stylesheet">
    <script src="js/jquery-2.2.4.min.js"></script>
    <script src="bs/js/bootstrap.min.js"></script>
</head>

<body class="home">
    <!-- navigation bar -->
    {{>navbar}}

    <!-- banner -->
    {{>banner banner="blog" title="Blog"}}

    <!-- blog posts -->
    <div class="container blog">
      {{#each posts}}
        <div class="row">
         <div class="col-sm-6 col-sm-offset-3">
           <h2>{{this.title}}</h2>
           <div class="row">
             <div class="col-sm-4">
               <h6>
                 <i class="fa fa-clock-o"></i>
                 {{this.date}}
               </h6>
             </div>
             <div class="col-sm-4">
               <h6>
                 <i class="fa fa-wordpress"></i>
                 Link to post <a href={{this.link}}>here</a>
               </h6>
             </div>
              <div class="row">
			            <div class="col-sm-12">
                    <p class="pblog" id="blogPost">{{{this.content}}}</p>
			           </div>
              </div>
            </div>
          </div>
		    </div>
      {{/each}}
    </div>

    <!-- commit -->
    <div class="container footer">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <p>DigiBird is a valorisation project funded by the Dutch national program <a href="http://www.commit-nl.nl">COMMIT/</a>.</p>
            </div>
        </div>
    </div>
</body>
</html>
