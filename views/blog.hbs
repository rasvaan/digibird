<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>DigiBird blog</title>
    <link rel="shortcut icon" href="img/favicon.ico">
    <link href="css/digibird-blog.css" rel="stylesheet">
    <script src="js/digibird-blog.js"></script>
</head>

<body class="home">
    <!-- navigation bar -->
    {{>navbar}}

    <!-- banner -->
    {{>banner banner="blog" title="Blog"}}

    <!-- blog posts -->
    <div class="container" id="blog">
        {{#each posts}}
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <div class="col-sm-12">
                        <h2>{{this.title}}</h2>
                    </div>
                    <div class="col-sm-12">
                        <h6>
                            <i class="fa fa-clock-o"></i>
                            {{this.date}}
                            <a class="blog-link" href={{this.link}}><i class="fa fa-wordpress"></i> Link to post</a>
                        </h6>
                    </div>
                    <div class="col-sm-12">
                        {{{this.content}}}
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

    <!-- commit footer -->
    {{>footer}}

</body>
</html>
